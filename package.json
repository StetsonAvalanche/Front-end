    "aws-sdk": "^2.7.3",
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "express-session": "^1.14.2",
    "gmail-send": "^1.2.6",
    "hat": "0.0.3",
    "jquery": "^3.1.1",
    "marked": "^0.3.6",
    "material-ui": "^0.16.4",
    "mongoose": "^4.6.7",
    "nodemailer": "^2.6.4",
    "nodemailer-ses-transport": "^1.5.0",
    "passport": "^0.3.2",
    "passport-github2": "^0.1.10",
    "react": "^15.4.0",
    "react-dom": "^15.4.0",
    "react-dropzone-s3-uploader": "^0.7.3",
    "react-router": "^3.0.0",
